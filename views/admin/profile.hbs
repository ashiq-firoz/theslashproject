<!-- About-->
<section class="page-section bg-primary" id='about'>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <div class="row">
                    <div class="col btn-group-vertical">
                        {{#if tes}}
                        <h1 style="font-weight: lighter;">Tests</h1>
                        {{#each tes}}
                        <a href="/wtest?name={{this.username}}&testname={{this.subject}}"
                            class="btn btn-warning mt-1 rounded" onclick="check()">{{this.subject}}</a>
                        {{/each}}
                        {{else}}
                        {{#if test}}
                        <h1 style="font-weight: lighter;">Tests</h1>
                        {{#each test}}
                        <a href="/check?name={{this.username}}&testname={{this.subject}}&n={{this.username}}"
                            class="btn btn-warning mt-1 rounded" onclick="check()">{{this.subject}}</a>
                        {{/each}}
                        {{else}}
                        <h3>No Test Found</h3>
                        {{/if}}
                        {{/if}}
                    </div>
                    <div class="col btn-group-vertical">
                        {{#if ans}}
                        <h1 style="font-weight: lighter;">Answers</h1>
                        {{#each ans}}
                        <a href="admin/answers?subject={{this.subject}}&user={{this.username}}" type="button"
                            class="btn btn-secondary mt-1 rounded" style="text-align: center;">{{this.subject}}</a>
                        {{/each}}
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Modalattent-->
<div class="modal fade" id="attent" tabindex="-1" role="dialog" aria-labelledby="Attent" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Attent Your Test</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/check" method="POST">
                    <div class="form-group">
                        <label for="testid">Username of your Organizer</label>
                        <input type="text" class="form-control" id="username" placeholder="Username" name="username">
                    </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
